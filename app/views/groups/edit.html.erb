<div class= "container">

  <div class= "row">

    <div class= "col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

      <h1>Crete Group</h1>

        <% if @group.errors.any? %>
          <ul class= "alert alert-danger" role="alert">
          <h3 class="alert-heading">
            <%= @group.errors.count %>error prohibited this obj from being saved:
          </h3>
            <% @group.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>


        <%= form_with model: @group do |f| %>

          <div class= "form-group">
            <label for = "inputTitle">グループ名</label>
            <%= f.text_field :name, autofocus: true, id:"inputName", class: "form-control" %>
          </div>

          <div class= "form-group">
            <label for = "inputbody">紹介文</label>
            <%= f.text_area :introduction, autofocus: true, id:"inputIntroduction", class: "form-control" %>
          </div>

          <div class= "form-group">
            <label for= "inputImage">グループ画像</label>
              <%= f.file_field :image, class: "form-control-file", placeholder:"Image", accept:"image/*" %>
          </div>

          <div class= "form-group">
            <%= f.submit "Update Group", class:"btn btn-success", class:"btn btn-secondary" %>
          </div>
        <% end %>

    </div>

  </div>

</div>