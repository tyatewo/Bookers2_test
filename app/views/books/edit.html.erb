<div class= "container">

<div class= "row">

<div class= "col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

<h1>Editing Book</h1>

<% if @book.errors.any? %>
<ul class= "alert alert-danger" role="alert">
  <h3 class="alert-heading">
    <%= @book.errors.count %>error prohibited this obj from being saved:
  </h3>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>


<%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>

<div class= "form-group">
  <label for = "inputTitle">Title</label>
  <%= f.text_field :title, autofocus: true, id:"inputTitle", class: "form-control" %>
</div>

<div class= "form-group">
  <label for = "inputbody">Opinion</label>
  <%= f.text_area :body, autofocus: true, id:"inputbody", class: "form-control" %>
</div>

<div class= "form-group">
  <%= render 'form', book: @book %>
</div>

<div class= "form-group">
  <%= f.submit "Update Book", class:"btn btn-success" %>
</div>
<% end %>

  <%= link_to "Show", book_path(@book.id) %> | <%= link_to "Back", books_path %>


</div>

</div>

</div>


