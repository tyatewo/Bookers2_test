<h6 class= "alert-heading">
  <%= flash[:notice] %>
</h6>


<div class= "container">

<div class= "row">

<div class= "col-md-3">

<%= render 'books/list', book: @book_new, books: @books, user: @user %>

</div>


<div class= 'col-md-8 offset-md-1'>

<h2>Book detail</h2>

<table class="table table-hover table-inverse">

  <tbody>

    <tr>
      <td><%= link_to user_path(@user.id) do %>
            <%= image_tag @user.get_profile_image(100,100) %><br>
            <%= @user.name %>
          <% end %>
      </td>
      <td><%= link_to @book.title, book_path(@book.id) %></td>
      <td><%= @book.body %></td>
      <td><%= render "static_rate", book: @book %></td>
      <td><%= render "favorite", book: @book %></td>
      <% if @user == current_user %>
      <td><%= link_to "Edit", edit_book_path(@book.id), class:"btn btn-success" %></td>
      <td><%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm"=> "本当に消しますか？", class:"btn btn-danger" %></td>
      <% end %>
    </tr>

  </tbody>

</table>

</div>

</div>

</div>

